{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./",
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@lib/common": ["./libs/common/src"],
      "@lib/context": ["./libs/context/src"],
      "@lib/ddd": ["./libs/ddd/src"],
      "@lib/logger": ["libs/logger/src"],
      "@lib/server": ["libs/server/src"],
      "@lib/cache": ["libs/cache/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*spec.ts"],
  "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "DOM"]
}
